class Solution {
    public int maxArea(int[] height) {
        int maxcapacity = 0;
        int left = 0;
        int right = height.length - 1;
        while (left < right) {

           int currentcapacity=Math.min(height[left],height[right])*(right-left);
           maxcapacity=Math.max(maxcapacity,currentcapacity);
           
            if(height[left]<height[right]){
                left++;
            }
            else{
           right--;
            }

        }
        return maxcapacity;

    }
}
